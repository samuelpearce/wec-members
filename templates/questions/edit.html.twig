{% extends 'base.html.twig' %}

{% set breadcrumbs = { "Home": "members_area_home", "Children's talk questions and answers": "questions_home"} %}

{% block title %}Question Series Schedule{% endblock %}

{% block content %}
    <div class="container">
    <h1>Publish Question</h1>

        {{ question.number }}. {{ question.question }} <br />
        {{ question.answer }} <br /> <br />
        {{ form_start(edit_form, {'attr': {'class': 'form' }}) }}
            {{ form_errors(edit_form) }}

            <div class="form-group">
                {{ form_label(edit_form.publishDate) }}
                {{ form_widget(edit_form.publishDate) }}
                {{ form_errors(edit_form.publishDate) }}
            </div>

            <div class="form-group">
                {{ form_label(edit_form.scheduleSubsequentQuestions) }}
                {{ form_widget(edit_form.scheduleSubsequentQuestions) }}
                <p>This schedules all following questions to be published in increments of 1 week from the above date</p>
                <p>E.G. If you set the current question (number {{ question.number }} to be published now, the next
                question ({{ question.number + 1 }}) will be published in 1 weeks time. Question number
                {{ question.number + 2 }} will be published in 2 weeks time etc. Only questions in the series will be
                affected.</p>
                {{ form_errors(edit_form.scheduleSubsequentQuestions) }}
            </div>
            <input type="submit" value="Schedule" class="btn btn-primary">

            {{ form_rest(edit_form) }}
        {{ form_end(edit_form) }}

        <ul class="record_actions">

        </ul>
    </div>
</ul>
{% endblock %}
