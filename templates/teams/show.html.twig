{% extends 'base.html.twig' %}

{% block title %}Teams{% endblock %}

{% block body %}
    <h1>Teams</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ team.link }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if team.imageAsBase64 is not empty %}
                        <img src="data:image/png;base64, {{ team.imageAsBase64}}" alt="Red dot" />
                    {%  endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('teams_index') }}">back to list</a>

    <a href="{{ path('teams_edit', {'id': team.id}) }}">edit</a>

    {{ include('teams/_delete_form.html.twig') }}
{% endblock %}
